<% title ': Edit Question' %>

<%= render partial: 'application/header', locals: {head_text: 'Edit Question and Answer'} %>

<div class="bg-gray-100 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
  <div class="ml-3 inline-flex rounded-md shadow">
    <%= link_to 'Back to this Round', edit_round_path(@round), class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
  <div class="ml-3 inline-flex rounded-md shadow">
    <%= link_to 'Back to this Quiz', quiz_path(@round.quiz), class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
  <div class="ml-3 inline-flex rounded-md shadow">
    <%= link_to 'View Quizzes', quizzes_path, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50" %>
  </div>
</div>
<div class="bg-gray-100 p-20">
  <%= render partial: 'form', locals: {sub_text: 'Update Question and Answers'} %> 
</div>
<div class="px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
  <%= button_to 'Delete Question', round_question_path(@round, @question), method: :delete, class:"inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" %>
</div>