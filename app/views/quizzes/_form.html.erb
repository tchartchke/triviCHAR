<%= form_for @quiz, html:{ class:"mt-8 space-y-6" } do |f| %>

  <div class="rounded-md shadow-sm -space-y-px">
    <%= render partial: 'application/error', locals: {object: @quiz, txt: 'quiz'} %> 
    <div class="col-span-6 sm:col-span-4">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-5" %>
    </div>
    <%= f.hidden_field :host_id %>
    <div>
    <%= f.submit "Submit", class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>

