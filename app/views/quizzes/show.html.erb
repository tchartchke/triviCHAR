<h1><%= @quiz.title %> </h1>

<%= form_for @round do |f| %>
  <%= f.label :subject %>
  <%= f.text_field :subject %>

  <%= f.hidden_field :quiz_id %>

  <%= f.submit %>
<% end %>

<p>
Rounds (<%= @quiz.rounds.count %>):
</p>
<ol>
<% @quiz.rounds.each do |round| %>
  <li>
    <%= link_to round.subject, edit_round_path %><br>
  </li>
<% end %>
</ol>

<p>
  <%= link_to 'Delete Quiz', quiz_path(@quiz), method: :delete %>
</p>