<% title ": #{quiz_name(@quiz)}" %>

<%= render partial: 'application/header', locals: {head_text: quiz_name(@quiz)} %>


  <% @quiz.rounds.each do |round| %>


  <div class="bg-white shadow overflow-hidden sm:rounded-lg m-10 border-r border-t border-l border-gray-200">
    <div class="bg-gray-100 shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= round_name(round) %>
        </h3>
      </div>

      <% round.questions.each do |question| %>
        <div class="border-t border-gray-200">
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-4 sm:gap-4 sm:px-6">
          <div class="text-sm font-medium text-gray-500 sm:mt-0 sm:col-span-3">
            <%= question(question) %>
          </div>
          <div class="text-sm font-medium text-gray-500 col-span-1 grid grid-rows-2 ">
            <div class="mt-1 px-2 text-base text-green-600 col-span-1"><%= answer(question) %></div>
          </div>
        </div>
      </div>
      <% end %>

      </div>
    </div>
  </div>
<% end %>

<div class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Comments</h2>
    </div>

    <div class="mt-10">
      <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
      
      <% @quiz.comments.each do |comment| %>

        <div class="relative">
          <dt>
            <p class="ml-16 text-lg leading-6 font-medium text-gray-900"><%= comment.player.email %></p>
          </dt>
          <dd class="mt-2 ml-16 text-base text-gray-500">
            <%= comment.comment %>
          </dd>
        </div>
        
      <% end %>

      </dl>
    </div>
  </div>
</div>