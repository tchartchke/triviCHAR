

  <div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8 rounded-lg border border-gray-200 bg-white my-5">
    <div class="flex items-center justify-between flex-wrap">

      
      <% if status(game) == 'complete' %>
        <div class="w-0 flex-1 flex items-center">
          <span class="flex p-2 rounded-lg bg-green-800">
            <!-- Heroicon name: outline/check-circle -->
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </span>
          <p class="ml-3 font-medium">
            <span class="md:inline">
              <%= name(game) %>            
            </span>
          </p>
        </div>
        <div class="order-3 mt-2 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
          <%= link_to 'View', game_path(game), class:"flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-500 hover:text-white" %>
        </div>
      <% else %>
        <div class="w-0 flex-1 flex items-center">
          <span class="flex p-2 rounded-lg bg-red-800">
            <!-- Heroicon name: outline/pencil -->
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </span>
          <p class="ml-3 font-medium">
            <span class="md:inline">
              <%= name(game) %>            
            </span>
          </p>
        </div>
        <div class="order-3 mt-2 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
          <%= link_to 'Play', game_path(game), class:"flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-500 hover:text-white" %>
        </div>
      <% end %>
    </div>
  </div>
