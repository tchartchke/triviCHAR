<% title 'TriviCHAR: Trivia by You' %>
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          TriviCHAR
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Trivia by you for you and everyone else
        </p>
        <div>
          <%= button_to "Sign Up", new_user_registration_path, method: :get, class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= button_to "Sign In", new_user_session_path, method: :get, class:"group relative w-full flex shadow justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
    </div>
  </div>
</div>